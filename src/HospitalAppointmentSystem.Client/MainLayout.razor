@inherits LayoutComponentBase

<div class="page">
    <nav class="navbar">
        <div class="navbar-brand">
            <a href="/" class="brand-link">
                <i class="fas fa-clinic-medical"></i>
                <span>Система запису до лікаря</span>
            </a>
        </div>

        <div class="navbar-content">
            <AuthorizeView>
                <Authorized>
                    <div class="user-section">
                        <div class="user-info" @onclick="ToggleUserMenu">
                            <i class="fas fa-user-circle"></i>
                            <span class="username">@context.User.Identity?.Name</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        @if (isUserMenuVisible)
                        {
                            <div class="user-menu">
                                <a href="/profile" class="menu-item">
                                    <i class="fas fa-id-card"></i>
                                    <span>Мій профіль</span>
                                </a>
                                <a href="/appointments" class="menu-item">
                                    <i class="fas fa-calendar-check"></i>
                                    <span>Мої записи</span>
                                </a>
                                <div class="menu-divider"></div>
                                <a href="/logout" class="menu-item text-danger">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Вийти</span>
                                </a>
                            </div>
                        }
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="auth-buttons">
                        <a href="/login" class="btn btn-login">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Увійти</span>
                        </a>
                        <a href="/register" class="btn btn-register">
                            <i class="fas fa-user-plus"></i>
                            <span>Зареєструватися</span>
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>

    <div class="main-content">
        <div class="sidebar">
            <NavMenu />
        </div>
        <main class="content">
            @Body
        </main>
    </div>
</div>

<style>
    .page {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar {
        height: 60px;
        background-color: white;
        border-bottom: 1px solid #edf2f7;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1.5rem;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .brand-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: #2d3748;
        font-weight: 600;
        font-size: 1.25rem;
    }

    .brand-link i {
        color: #4299e1;
        font-size: 1.5rem;
    }

    .main-content {
        margin-top: 60px;
        display: flex;
        flex: 1;
    }

    .sidebar {
        width: 280px;
        background-color: white;
        border-right: 1px solid #edf2f7;
        height: calc(100vh - 60px);
        position: fixed;
        overflow-y: auto;
    }

    .content {
        flex: 1;
        margin-left: 280px;
        padding: 2rem;
        background-color: #f7fafc;
        min-height: calc(100vh - 60px);
    }

    .user-section {
        position: relative;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 1rem;
        cursor: pointer;
        border-radius: 0.375rem;
        transition: background-color 0.2s;
    }

    .user-info:hover {
        background-color: #f7fafc;
    }

    .username {
        font-weight: 500;
        color: #2d3748;
    }

    .user-menu {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        width: 240px;
        padding: 0.5rem 0;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: #4a5568;
        text-decoration: none;
        transition: background-color 0.2s;
    }

    .menu-item:hover {
        background-color: #f7fafc;
        color: #2b6cb0;
    }

    .menu-item.text-danger {
        color: #e53e3e;
    }

    .menu-item.text-danger:hover {
        background-color: #fff5f5;
        color: #c53030;
    }

    .menu-divider {
        height: 1px;
        background-color: #edf2f7;
        margin: 0.5rem 0;
    }

    .auth-buttons {
        display: flex;
        gap: 1rem;
    }

    .btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-login {
        color: #4299e1;
        background-color: transparent;
        border: 1px solid #4299e1;
    }

    .btn-login:hover {
        background-color: #ebf8ff;
    }

    .btn-register {
        color: white;
        background-color: #4299e1;
        border: 1px solid #4299e1;
    }

    .btn-register:hover {
        background-color: #3182ce;
        border-color: #3182ce;
    }

    @@media (max-width: 768px) {
        .navbar {
            padding: 0 1rem;
        }

        .brand-link span {
            display: none;
        }

        .sidebar {
            display: none;
        }

        .content {
            margin-left: 0;
            padding: 1rem;
        }

        .user-info span {
            display: none;
        }

        .auth-buttons {
            gap: 0.5rem;
        }

        .btn span {
            display: none;
        }

        .btn {
            padding: 0.5rem;
        }
    }
</style>

@code {
    private bool isUserMenuVisible;

    private void ToggleUserMenu()
    {
        isUserMenuVisible = !isUserMenuVisible;
    }
}