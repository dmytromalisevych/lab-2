@model DoctorsListViewModel
@{
    ViewData["Title"] = "Лікарі";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>
                <i class="fas fa-user-md me-2"></i>Лікарі
            </h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" name="searchString" value="@Model.SearchString" 
                               class="form-control" placeholder="Пошук...">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Додати лікаря
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@doctor.LastName @doctor.FirstName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@doctor.Specialization</h6>
                        <p class="card-text">   
                        </p>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@doctor.DoctorId" 
                               class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Редагувати
                            </a>
                            <a asp-action="Details" asp-route-id="@doctor.DoctorId" 
                               class="btn btn-info">
                                <i class="fas fa-info-circle me-1"></i>Деталі
                            </a>
                            <form asp-action="Delete" asp-route-id="@doctor.DoctorId" 
                                  onsubmit="return confirm('Ви впевнені, що хочете видалити цього лікаря?');"
                                  style="display: inline;">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Видалити
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <div page-model="@Model.PagingInfo" 
                 page-action="Index"
                 page-url-searchString="@Model.SearchString"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal="btn-outline-primary"
                 page-class-selected="btn-primary"
                 class="btn-group mb-3">
            </div>
        </div>
    </div>
</div>