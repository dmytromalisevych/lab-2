<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Система запису на прийом до лікаря</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-hospital me-2"></i>Медичний центр
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Головна
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Appointments" ? "active" : "")"
                           asp-controller="Appointments" asp-action="Index">
                            <i class="fas fa-calendar-check me-1"></i>Записи
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Doctors" ? "active" : "")"
                           asp-controller="Doctors" asp-action="Index">
                            <i class="fas fa-user-md me-1"></i>Лікарі
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Patients" ? "active" : "")"
                           asp-controller="Patients" asp-action="Index">
                            <i class="fas fa-users me-1"></i>Пацієнти
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<!-- Додайте цей код після <div class="container"> -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<footer class="border-top footer text-muted bg-light">
    <div class="container py-3">
        <div class="row">
            <div class="col-md-4">
                <h5>Медичний центр</h5>
                <p>Система запису на прийом до лікаря</p>
            </div>
            <div class="col-md-4">
                <h5>Контакти</h5>
                <address>
                    <i class="fas fa-map-marker-alt me-2"></i>вул. Медична, 123<br />
                    <i class="fas fa-phone me-2"></i>+380 (50) 123-4567<br />
                    <i class="fas fa-envelope me-2"></i><a href="mailto:info@medcenter.com">info@medcenter.com</a>
                </address>
            </div>
            <div class="col-md-4">
                <h5>Графік роботи</h5>
                <p>
                    <i class="fas fa-clock me-2"></i>Пн-Пт: 8:00 - 20:00<br />
                    <i class="fas fa-clock me-2"></i>Сб: 9:00 - 18:00<br />
                    <i class="fas fa-clock me-2"></i>Нд: Вихідний
                </p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                &copy; @DateTime.Now.Year - Медичний центр. Всі права захищено.
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>