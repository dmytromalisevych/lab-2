@model HospitalAppointmentSystem.Models.MedicalRecord

@{
    ViewData["Title"] = "Деталі медичного запису";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Пацієнт</dt>
        <dd class="col-sm-10">@Model.Patient?.FullName</dd>

        <dt class="col-sm-2">Діагноз</dt>
        <dd class="col-sm-10">@Model.Diagnosis</dd>

        <dt class="col-sm-2">Лікування</dt>
        <dd class="col-sm-10">@Model.Treatment</dd>

        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.RecordDate.ToShortDateString()</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MedicalRecordId" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>