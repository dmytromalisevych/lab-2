@model Patient
@{
    ViewData["Title"] = "Видалення пацієнта";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Ви впевнені, що хочете видалити цього пацієнта?</h4>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Інформація про пацієнта</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">ПІБ</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Дата народження</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd.MM.yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PatientId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Видалити
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </form>
    </div>
</div>