@model IEnumerable<Patient>

<div class="container-fluid">
    <h2>
        <i class="fas fa-users"></i> Пацієнти
    </h2>

    <div class="mb-3">
        <form asp-action="Index" method="get" class="d-flex justify-content-between align-items-center">
            <div class="input-group" style="width: 300px;">
                <input type="text" name="searchString" class="form-control" placeholder="Пошук...">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Додати пацієнта
            </a>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Прізвище</th>
                <th>Ім'я</th>
                <th>Дата народження</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.LastName</td>
                    <td>@patient.FirstName</td>
                    <td>@patient.DateOfBirth.ToString("dd.MM.yyyy")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@patient.PatientId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Ви впевнені, що хочете видалити цього пацієнта?');">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>