@model PatientsListViewModel
@{
    ViewData["Title"] = "Пацієнти";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>
                <i class="fas fa-users me-2"></i>Пацієнти
            </h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" name="searchString" value="@Model.SearchString" 
                               class="form-control" placeholder="Пошук...">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Додати пацієнта
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Прізвище</th>
                            <th>Ім'я</th>
                            <th>Дата народження</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td>@patient.LastName</td>
                                <td>@patient.FirstName</td>
                                <td>@patient.DateOfBirth.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@patient.PatientId" 
                                           class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@patient.PatientId" 
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@patient.PatientId" 
                                              onsubmit="return confirm('Ви впевнені, що хочете видалити цього пацієнта?');"
                                              style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div page-model="@Model.PagingInfo" 
                 page-action="Index"
                 page-url-searchString="@Model.SearchString"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal="btn-outline-primary"
                 page-class-selected="btn-primary"
                 class="btn-group mb-3">
            </div>
        </div>
    </div>
</div>